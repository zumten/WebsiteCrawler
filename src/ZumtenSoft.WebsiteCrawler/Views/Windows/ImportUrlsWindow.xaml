<Window x:Class="ZumtenSoft.WebsiteCrawler.Views.Windows.ImportUrlsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Urls to import" Height="375" Width="522" ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="27" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <TextBlock Text="List of Urls separated by new line" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
        <TextBox x:Name="txtUrls" Grid.Row="1" TextWrapping="Wrap" AcceptsReturn="True" />

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button DockPanel.Dock="Right" Margin="3" Click="OK_Click" Width="100" IsDefault="True">OK</Button>
            <Button DockPanel.Dock="Right" Margin="3" Click="Cancel_Click" Width="100" IsCancel="True">Cancel</Button>
        </StackPanel>
    </Grid>
</Window>
